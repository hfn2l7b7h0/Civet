{
  "name": "civet",
  "displayName": "Civet",
  "description": "Civet Language Server",
  "icon": "images/civet.webp",
  "version": "0.1.1",
  "publisher": "DanielX",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanielXMoore/civet.git"
  },
  "categories": [],
  "engines": {
    "vscode": "^1.65.0",
    "node": "^18.6.0 || ^16.17.0"
  },
  "activationEvents": [
    "onLanguage:civet"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "civet",
        "extensions": [
          ".civet"
        ],
        "configuration": "./syntaxes/civet-configuration.json"
      },
      {
        "id": "civet-markdown-injection"
      }
    ],
    "grammars": [
      {
        "language": "civet",
        "scopeName": "source.civet",
        "path": "./syntaxes/civet.json"
      },
      {
        "language": "civet-markdown-injection",
        "scopeName": "markdown.civet.codeblock",
        "path": "./syntaxes/codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.civet": "civet"
        }
      }
    ]
  },
  "mocha": {
    "extension": [
      "ts",
      "civet"
    ],
    "require": [
      "source-map-support"
    ],
    "loader": [
      "ts-node/esm",
      "../register.mjs"
    ],
    "reporter": "spec",
    "recursive": true,
    "spec": [
      "test"
    ]
  },
  "scripts": {
    "build": "node build.mjs",
    "package": "node build.mjs && vsce package --yarn",
    "test": "mocha",
    "watch": "node build.mjs --watch"
  },
  "devDependencies": {
    "@danielx/civet": "^0.2.8",
    "@types/mocha": "^9",
    "@types/node": "^14.17.0",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^2.1.2",
    "esbuild": "^0.14.25",
    "mocha": "^10",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2",
    "vsce": "^2.7.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.4"
  }
}
