{ testCase } from ./helper.civet

describe "chained comparisons", ->
  testCase """
    basic
    ---
    a < b < c
    a < b < c < d
    ---
    a < b && b < c;
    a < b && b < c && c < d;
  """

  testCase """
    lower precedence
    ---
    a < b < c || a > b > c
    ---
    a < b && b < c || a > b && b > c;
  """

  testCase """
    higher precedence
    ---
    a + b < c + d < e + f
    ---
    a + b < c + d && c + d < e + f;
  """

  testCase """
    higher precedence
    ---
    a + b + x + y < c + d < e + f
    ---
    a + b + x + y < c + d && c + d < e + f;
  """

  testCase """
    in instanceof combo
    ---
    a in b instanceof C
    ---
    a in b && b instanceof C;
  """
