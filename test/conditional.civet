{testCase, throws} from ./helper.civet

describe "conditional expression", ->
  testCase """
    basic
    ---
    x ? y : z
    ---
    x ? y : z
  """

  testCase """
    it works with braceless inline objects
    ---
    x ? a: b : c: d
    ---
    x ? {a: b} : {c: d}
  """

  it "needs space before ?", ->
    throws """
      x? y : z
    """
