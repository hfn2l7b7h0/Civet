{testCase} from ./helper.civet

describe "slice", ->
  testCase """
    slice range
    ---
    x[0...10]
    ---
    x.slice(0, 10)
  """

  testCase """
    slice end omitted
    ---
    x[0...]
    ---
    x.slice(0)
  """

  testCase """
    slice inclusive number end
    ---
    x[0..10]
    ---
    x.slice(0, 1 + 10 || 1/0)
  """

  testCase """
    slice inclusive variable end
    ---
    x[0..b]
    ---
    x.slice(0, 1 + b || 1/0)
  """
