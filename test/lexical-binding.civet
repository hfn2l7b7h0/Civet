{testCase} from ./helper.civet

describe "lexical binding", ->
  testCase """
    let
    ---
    let x
    let x = 2
    ---
    let x
    let x = 2
  """

  testCase """
    let multiple assignments
    ---
    let x = 2, y = 3
    ---
    let x = 2, y = 3
  """

  testCase """
    array destructuring
    ---
    let [ x, y ] = a
    let [
      x
      y
    ] = a
    ---
    let [ x, y ] = a
    let [
      x,
      y
    ] = a
  """

  testCase """
    array destructuring elision
    ---
    let [ ,,, y ] = a
    let [
      ,,,x
      y
    ] = a
    ---
    let [ ,,, y ] = a
    let [
      ,,,x,
      y
    ] = a
  """

  testCase """
    BindingRestElement
    ---
    let [ x, ...y ] = a
    let [
      x
      ...y
    ] = a
    ---
    let [ x, ...y ] = a
    let [
      x,
      ...y
    ] = a
  """

  testCase """
    Nested array destructuring
    ---
    let [ [ x, ...y] ] = a
    let [
      [
        x
        ...y
      ]
    ] = a
    ---
    let [ [ x, ...y] ] = a
    let [
      [
        x,
        ...y
      ]
    ] = a
  """

  testCase """
    object destructuring
    ---
    let { x, y } = a
    let {
      x
      y
    } = a
    ---
    let { x, y } = a
    let {
      x,
      y
    } = a
  """

  testCase """
    empty object destructuring
    ---
    let { } = a
    ---
    let { } = a
  """

  testCase """
    simple object destructuring as
    ---
    let {x: y} = a
    ---
    let {x: y} = a
  """

  testCase """
    object rest
    ---
    let { z, ...x } = a
    ---
    let { z, ...x } = a
  """

  testCase """
    nested indented object destructuring
    ---
    let {
      x: {
        y: z
      }
    } = a
    ---
    let {
      x: {
        y: z
      }
    } = a
  """

  testCase """
    kitchen sink
    ---
    let {
      a: {
        b: {
          c=true
          d= ->
            return 1
        }
      }
      x
      y
      z=[1, 2, 3]
      p: [
        v
        vv
        {vvv: b}
      ]
      ...q
    } = a
    ---
    let {
      a: {
        b: {
          c=true,
          d= function() {
            return 1
          }
        }
      },
      x,
      y,
      z=[1, 2, 3],
      p: [
        v,
        vv,
        {vvv: b}
      ],
      ...q
    } = a
  """
