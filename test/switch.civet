import {testCase} from "./helper.civet"

describe "switch", ->
  testCase """
    basic
    ---
    switch (x) {
      case 1:
        break
    }
    ---
    switch (x) {
      case 1:
        break;
    };
  """

  testCase """
    optional parens
    ---
    switch x {
      case 1:
        break
    }
    ---
    switch (x) {
      case 1:
        break;
    };
  """

  testCase """
    optional braces
    ---
    switch (x)
      case 1:
        break
    ---
    switch (x) {
      case 1:
        break;
    };
  """

  testCase """
    when
    ---
    switch x
      when 1
        console.log y
    ---
    switch (x) {
      case 1:
        console.log(y);break;
    };
  """
