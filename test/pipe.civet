{ testCase, throws } from ./helper.civet

describe "pipe", ->
  testCase """
    pipe expression
    ---
    a |> fn
    ---
    fn(a)
  """

  testCase """
    chained pipe expression
    ---
    a |> foo |> bar
    ---
    bar(foo(a))
  """

  testCase """
    pipe expression with shorthand functions
    ---
    a |> & + 1 |> bar
    ---
    bar(($ => $ + 1)(a))
  """

  testCase """
    nested pipelines
    ---
    (a |> & + 1) |> (b |> bar)
    ---
    (bar(b))((($ => $ + 1)(a)))
  """

  testCase """
    multi line trailing
    ---
    x + 1 |>
      & * 2 |>
      foo |>
      baz(1)
    ---
    baz(1)(foo(($ => $ * 2)(x + 1)))
  """

  testCase """
    multi line trailing with comments
    ---
    x + 1 |> // Next step:
      & * 2 |> // Subsequent step:
      foo |> /* Last step: */
      baz(1)
    ---
    baz(1) /* Last step: */
      (foo // Subsequent step:
      (($ => $ * 2 // Next step:
      )(x + 1)))
  """

  testCase """
    multi line leading
    ---
    x + 1
    |> & * 2
    |> foo
    |> baz(1)
    ---
    baz(1)(foo(($ => $ * 2)(x + 1)))
  """

  testCase """
    multi line leading with comments
    ---
    x + 1
    |> & * 2 // Adds two
    |> foo // Processes through foo
    |> baz(1)
    ---
    baz // Processes through foo
    (1)(foo // Adds two
    (($ => $ * 2)(x + 1)))
    """

  testCase """
    await in pipeline
    ---
    x + 1
    |> performAsyncOp
    |> await
    |> foo
    ---
    foo(await performAsyncOp(x + 1))
  """

  testCase """
    yield in pipeline
    ---
    x + 1
    |> yield
    |> foo
    ---
    foo(yield x + 1)
  """

  testCase """
    return in pipeline
    ---
    x + 1
    |> foo
    |> return
    ---
    return foo(x + 1)
  """

  testCase """
    no nested pipelines in implicit arguments
    ---
    array |> .sort ((x, y) => x - y) |> .join ',' |> console.log
    ---
    console.log(($ => $.join(','))(($1 => $1.sort(((x, y) => x - y)))(array)))
  """

  testCase """
    nested pipelines within nested arguments
    ---
    func |> .call @,
      arg1 |> op1 |> op2
      arg2 |> op3 |> op4
    ---
    ($ => $.call(this,
      op2(op1(arg1)),
      op4(op3(arg2)),))(func)
  """

  describe "thicc", ->
    testCase """
      basic
      ---
      x ||> f
      ---
      f(x),x
    """

    testCase """
      thick pipe first
      ---
      x ||> f |> g
      ---
      f(x),g(x)
    """

    // TODO: ref to avoid duplicate evaluation of f(x)
    // let ref
    // g(ref=f(x)),ref
    testCase """
      thick pipe second
      ---
      x
      |> f
      ||> g
      ---
      g(f(x)),f(x)
    """

    testCase """
      two thick pipes
      ---
      x
      ||> f
      ||> g
      ---
      f(x),g(x),x
    """

    // TODO: unwrap &.block
    testCase """
      accessignment
      ---
      document.title |>= &.toUpperCase()
      ---
      document.title = ($ => $.toUpperCase())(document.title)
    """

    // TODO: unwrap &.blocks
    testCase """
      array operations with explicit calls
      ---
      array ||> .push(3) ||> .shift() ||> .sort()
      ---
      ($ => $.push(3))(array),($1 => $1.shift())(array),($2 => $2.sort())(array),array
    """

    testCase """
      array operations with implicit calls
      ---
      array ||> .push 3 ||> .shift() ||> .sort()
      ---
      ($ => $.push(3))(array),($1 => $1.shift())(array),($2 => $2.sort())(array),array
    """

    testCase """
      multi-line array operations with implicit calls
      ---
      array
      ||> .push 3
      ||> .shift()
      ||> .sort()
      ---
      ($ => $.push(3))(array),($1 => $1.shift())(array),($2 => $2.sort())(array),array
    """

    testCase """
      pipe assignment
      ---
      lhs |>= func1 |> func2 |> func3 |> func4
      ---
      lhs = func4(func3(func2(func1(lhs))))
    """

  describe "assignment outside of first position", ->
    throws """
      pipe then assign
      ---
      a |> b |>= c
    """

    throws """
      multiple assigns
      ---
      a |>= b |>= c |>= d |>= e
    """
