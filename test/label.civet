{testCase} from ./helper.civet

describe "labels", ->
  testCase """
    labeled assignment
    ---
    :foo a = 1
    ---
    foo: a = 1
  """

  testCase """
    labeled loop
    ---
    :foo loop
      i++
    ---
    foo: while(true) {
      i++
    }
  """

  testCase """
    labeled for loop
    ---
    :foo for item of items
      process item
    ---
    foo: for (const item of items) {
      process(item)
    }
  """

  testCase """
    Svelte $:
    ---
    $: a = 1
    ---
    $: a = 1
  """

  testCase """
    $ as object key via quotes
    ---
    "$": a = 1
    ---
    ({"$":a = 1})
  """

  testCase """
    $ as object key via braces
    ---
    {$: a = 1}
    ---
    ({$:a = 1})
  """
