{testCase} from ./helper.civet

describe "coffee compat", ->
  testCase """
    ==
    ---
    "civet coffee-compat"
    a == b
    ---
    a === b;
  """

  testCase """
    !=
    ---
    "civet coffee-compat"
    a != b
    ---
    a !== b;
  """

  testCase """
    first line comment
    ---
    "civet coffee-compat"
    # first line comment
    ---
    // first line comment
  """

  testCase """
    shebang with directive
    ---
    #! /usr/bin/env coffee
    "civet coffee-compat"
    # comment
    ---
    #! /usr/bin/env coffee
    // comment
  """

  describe "auto-var", ->
    testCase """
      multiple assignment
      ---
      "civet auto-var"
      a = b = c = 1
      a = 2
      ---
      var a, b, c;
      a = b = c = 1;
      a = 2;
    """
